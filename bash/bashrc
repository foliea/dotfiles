# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Environment variables
export EDITOR=vim
export SHELL=$(which bash)
export TERM=xterm-256color
export LC_ALL=en_US.UTF-8
export PAGER=most

# Ruby
if command -v rbenv >/dev/null 2>&1; then
    export PATH="$HOME/.rbenv/bin:$PATH"
    eval "$(rbenv init -)"
fi

# Node
export NVM_DIR="$HOME/.nvm"
export NVM_DEFAULT_VERSION=24

if [ -d "$NVM_DIR" ]; then
    [ -s "$NVM_DIR/nvm.sh" ] && source "$NVM_DIR/nvm.sh"
    [ -s "$NVM_DIR/bash_completion" ] && source "$NVM_DIR/bash_completion"
    command -v nvm >/dev/null 2>&1 && nvm use "$NVM_DEFAULT_VERSION" >/dev/null 2>&1
fi

# Golang
if command -v go >/dev/null 2>&1; then
    export GOPATH="$HOME/dev/go"
fi

# Brew
if command -v brew >/dev/null 2>&1; then
    alias python=/opt/homebrew/bin/python3
fi

# Rust
if [ -d "$HOME/.cargo/bin" ]; then
    export PATH="$HOME/.cargo/bin:$PATH"
fi

# Prepend /opt/homebrew/bin to PATH if it exists
if [ -d "/opt/homebrew/bin" ]; then
    export PATH="/opt/homebrew/bin:$PATH"
fi

# Always alias python to python3
alias python=python3

set -o vi

# Aliases
alias ll='ls -lF'
alias la='ls -lA'
alias git='hub'

# Prompt setup
if [ -f "$HOME/.config/bash/prompt.bash" ]; then
    source "$HOME/.config/bash/prompt.bash"
fi

# Load local customizations if they exist
[ -f "$HOME/.bashrc.local" ] && source "$HOME/.bashrc.local"

# Load AWS CLI configuration if it exists
[ -f "$HOME/.aws/cli.bash" ] && source "$HOME/.aws/cli.bash"
