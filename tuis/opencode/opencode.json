{
  "$schema": "https://opencode.ai/config.json",
  "theme": "default",
  "keybinds": {
    "leader": "ctrl+space"
  },
  "layout": "stretch",
  "mode": {
    "review": {
      "prompt": "{file:./prompts/code-review.txt}",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "webfetch": true,
        "write": false,
        "edit": false,
        "bash": true
      }
    },
    "search": {
      "prompt": "{file:./prompts/search.txt}",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "webfetch": true,
        "bash": true,
        "write": false,
        "edit": false
      }
    }
  }
}
