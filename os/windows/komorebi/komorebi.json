{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.37/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 0,
  "default_container_padding": 0,
  "border": true,
  "border_width": 5,
  "border_offset": -1,
  "border_style": "System",
  "border_colours": {
    "single": "#f2777a",
    "stack": "#99cc99",
    "monocle": "#ffcc66",
    "unfocused": "#000000"
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "Home",
          "layout": "BSP"
        },
        {
          "name": "Dev",
          "layout": "BSP"
        },
        {
          "name": "Chat",
          "layout": "BSP"
        },
        {
          "name": "Video",
          "layout": "BSP"
        },
        {
          "name": "Misc",
          "layout": "BSP"
        }
      ]
    }
  ],
  "animation": {
    "enabled": true,
    "duration": 250,
    "fps": 60,
    "style": "EaseOutSine"
  }
}
